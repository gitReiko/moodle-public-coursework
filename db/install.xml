        <KEY NAME="coursework" TYPE="foreign" FIELDS="coursework" REFTABLE="coursework" REFFIELDS="id" />
        <KEY NAME="collection" TYPE="foreign" FIELDS="collection" REFTABLE="coursework_theme_collections" REFFIELDS="id" />
      </KEYS>
